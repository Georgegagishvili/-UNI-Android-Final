<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.game.GameFragment">


    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3D24F" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_back"
            style="@style/mainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:height="50dp"
            android:fontFamily="@font/baamini"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:text="BACK"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_levels"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/bebasregular"
            android:gravity="end"
            android:text="Question 1/10"
            android:textAlignment="inherit"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="45sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" />

        <TextView
            android:id="@+id/question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/bebasregular"
            android:gravity="center_vertical"
            android:minHeight="100dp"
            android:text="@string/sample_question"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:columnCount="2"
            android:paddingHorizontal="10dp"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <TextView
                android:id="@+id/answer_topleft"
                style="@style/answerBlock" />


            <TextView
                android:id="@+id/answer_topright"
                style="@style/answerBlock" />


            <TextView
                android:id="@+id/answer_bottomleft"
                style="@style/answerBlock" />


            <TextView
                android:id="@+id/answer_bottomright"
                style="@style/answerBlock" />

        </GridLayout>
    </LinearLayout>
</FrameLayout>