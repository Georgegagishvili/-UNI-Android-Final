<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/menuFragment"
    android:background="@drawable/drawable_backgroundmain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/start_button"
            android:layout_width="285dp"
            android:layout_height="40dp"
            android:layout_marginTop="225dp"
            android:background="@drawable/button_clicked_mainpage" />

        <ImageButton
            android:layout_width="285dp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/button_clicked_report" />

        <ImageButton
            android:layout_width="285dp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/button_clicked_facebook" />
    </LinearLayout>


</FrameLayout>